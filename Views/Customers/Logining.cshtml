@model ITAXI.Models.CustomerDB
@{
    ViewBag.Title = "ITAXI首頁";
}
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        var message =@Html.Raw(Json.Encode(TempData["message"]));
        alert(message);
    </script>
}
@{
    var customerAccount = Session["account"] as String;
    var driverAccount = Session["Dr_account"] as String;
    var loginAsCustomer = !string.IsNullOrEmpty(customerAccount);
    var loginAsDriver = !string.IsNullOrEmpty(driverAccount);
    var guest = !loginAsCustomer && !loginAsDriver;
    var controllerName = "";
    var account = "";
    controllerName = "Customers";
    account = customerAccount;
    <main>
        @*封面照片*@
        <section class="home" id="home">
            <img src="~/image/customer_1.PNG" alt="" class="home__img" />
            <div class="home__container container grid">
                <div class="home__data">
                    <span class="home__data-subtitle">
                        快速方便，叫車不用等<br>品質第一，顧客至上<br>你值得擁有尊貴的服務。
                    </span>
                    <h1 class="home__data-title">ITAXI</h1>
                </div>
            </div>
        </section>

        @*搭車*@
        <section class="customer section">
            <div class="customer__container container grid">

                <div class="customer__img">
                    <div class="customer__img-overlay">
                        <img src="~/image/customer_2.jpg" alt="" class="customer__img-one" />
                    </div>
                </div>
                <div class="customer__data">
                    <h2 class="section__title customer__title">開始搭車</h2>
                    <a onclick="location.href='@Url.Action("Create_immediately_Car", "Order")'" class="button" style="margin-bottom:10px;">立即搭車-汽車</a>
                    <a onclick="location.href='@Url.Action("Create_immediately_Moto", "Order")'" class="button" style="margin-bottom:10px;">立即搭車-機車</a>
                    <br>
                    <br>
                    <a onclick="location.href='@Url.Action("Create_reservation_Car", "Order")'" class="button" style="margin-bottom:10px;">預約搭車-汽車</a>
                    <a onclick="location.href='@Url.Action("Create_reservation_Moto", "Order")'" class="button" style="margin-bottom:10px;">預約搭車-機車</a>
                </div>
            </div>
        </section>

        @*乘客資訊*@
        <section class="customer section">
            <div class="customer__container container grid">
                <div class="customer__img">
                    <div class="customer__img-overlay">
                        <img src="~/image/taxi_cartoon_1.jpg" alt="" class="customer__img-one" />
                    </div>
                </div>
                <div class="customer__data">
                    <h2 class="section__title customer__title">個人資訊</h2>
                    <a onclick="location.href='@Url.Action("HitchhikingRecord", "Order")'" class="button" style="margin-bottom:10px;">搭車紀錄</a>
                    <a onclick="location.href='@Url.Action("Edit/" + account, controllerName)'" class="button" style="margin-bottom:10px;">更改會員資料</a>
                </div>
            </div>
        </section>

        @*聯絡我們*@
        <section class="contact section" id="contact">
            <div class="contact__container container grid">
                <div class="contact__img">
                    <div class="contact__img-overlay">
                        <img src="~/image/customerservice_2.jpg" alt="" class="contact__img-one" />
                    </div>
                </div>
                <div class="contact__data">
                    <h2 class="section__title contact__title">讓我們變得更好~</h2>
                    <a onclick="location.href='@Url.Action("Contact", "Home")'" class="button" style="margin-bottom:10px;">意見回饋</a>
                    <a onclick="location.href='@Url.Action("Search", "Order")'" class="button" style="margin-bottom:10px;">查詢司機評價</a>
                    <a onclick="location.href='@Url.Action("QA", "Home")'" class="button" style="margin-bottom:10px;">常見問題</a>
                </div>
            </div>
        </section>


    </main>

    <a href="#" class="scrollup" id="scroll-up">
        <i class="ri-arrow-up-line scrollup__icon"></i>
    </a>

    <hr />

    <footer class="footer section">
        <div class="footer__container grid">

            <div class="footer__data">
                <h3 class="footer__subtitle">乘客</h3>
                <ul>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create", "Customers")'" class="footer__link">乘客註冊</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Login", "Customers")'" class="footer__link">乘客登入</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create_immediately_Car", "Order")'" class="footer__link">立即搭車-汽車</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create_immediately_Moto", "Order")'" class="footer__link">立即搭車-機車</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create_reservation_Car", "Order")'" class="footer__link">預約搭車-汽車</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create_reservation_Moto", "Order")'" class="footer__link">預約搭車-機車</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Details/" + account, controllerName)'" class="footer__link">個人資訊</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Contact", "Home")'" class="footer__link">聯絡我們</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("QA", "Home")'" class="footer__link">常見問題</a>
                    </li>
                </ul>
            </div>
            <div class="footer__data">
                <h3 class="footer__subtitle">司機</h3>
                <ul>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Create", "Drivers")'" class="footer__link">司機註冊</a>
                    </li>
                    <li class="footer__item">
                        <a onclick="location.href='@Url.Action("Login", "Drivers")'" class="footer__link">司機登入</a>
                    </li>
                </ul>
            </div>
            <div class="footer__data">
                <h3 class="footer__title">ITAXI</h3>
                <p class="footer__description"></p>
                <div>
                    <a href="#" target="_blank" class="footer__social">
                        <i class="ri-app-store-line"></i>
                    </a>
                    <a href="#" target="_blank" class="footer__social">
                        <i class="ri-google-play-line"></i>
                    </a>
                    <a href="#" target="_blank" class="footer__social">
                        <i class="ri-mail-line"></i>
                    </a>
                </div>
            </div>
        </div>


    </footer>
}