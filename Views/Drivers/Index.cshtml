@model IEnumerable<ITAXI.Models.DriverDB>

@{
    ViewBag.Title = "Index";
    var account = "";
    if (Session["admin"] == null || string.IsNullOrWhiteSpace(Session["admin"].ToString()))
    {
        Response.Redirect("~/Home/about");
    }
    else
    {
        account = Session["admin"].ToString();
    }
}

<body>
    <div class="table-container">
        <h1 class="headimg">司機名單</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>司機編號</th>
                    <th>
                        身分證字號
                    </th>
                    <th>
                        姓名
                    </th>
                    <th>
                        電話
                    </th>
                    @*<th>
                            電話
                        </th>*@
                    <th>
                        性別
                    </th>
                    <th>按鈕</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="司機編號">
                            @Html.DisplayFor(modelItem => item.Dr_Num)
                        </td>
                        <td data-label="司機帳號">
                            @Html.DisplayFor(modelItem => item.Dr_ID)
                        </td>
                        <td data-label="司機名稱">
                            @Html.DisplayFor(modelItem => item.Dr_Name)
                        </td>
                        <td data-label="司機電話">
                            @Html.DisplayFor(modelItem => item.Dr_Phone)
                        </td>
                        @*<td data-label="司機電子郵件">
                                @Html.DisplayFor(modelItem => item.Dr_Phone)
                            </td>*@
                        <td data-label="性別名稱">
                            @Html.DisplayFor(modelItem => item.Dr_Sex)
                        </td>
                        <td data-label="按鈕">
                            @Html.ActionLink("編輯", "Edit", "Drivers", new { id = item.Dr_ID }, new { @class = "btn" })
                            @Html.ActionLink("詳細資料", "Details", "Drivers", new { id = item.Dr_ID }, new { @class = "btn" })
                            @Html.ActionLink("刪除", "Delete", "Drivers", new { id = item.Dr_ID }, new { @class = "btn" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</body>


<a href="#" class="scrollup" id="scroll-up">
    <i class="ri-arrow-up-line scrollup__icon"></i>
</a>
<footer class="footer section">
    <div class="footer__right">
        <p class="footer__copy">&copy; @DateTime.Now.Year - ITAXI團隊</p>
    </div>
</footer>